<div class="row">
    <div class="col-md-12 mt-2 mb-2">
        <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
            <h2 class="panel-title">The following errors prevented the user from getting updated</h2>
            <div class="panel-body">
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li>
                        <%= msg %>
                    </li>
                    <% end %>
            </ul>
            </div>
            </div>
            <% end %>
    </div>
</div>