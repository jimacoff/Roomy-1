<div class="row">
    <div class="col-md-12">
        <%= render 'room_menu' %>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Pricing
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <div class="row justify-content-center">
                    <div class="col-md-4">
                        <%= form_for @room do |f| %>
                            <div class="form-group">
                                <label>Price</label>
                                <%= f.text_field :price, placeholder: "eg: $100", class: "form-control", required: true %>
                            </div>

                            <div class="text-center">
                                <%= f.submit "Save", class: "btn btn-primary" %>
                            </div>
                            <% end %>
                         </div>   
                    </div>
                </blockquote>
            </div>
        </div>
    </div>
</div>