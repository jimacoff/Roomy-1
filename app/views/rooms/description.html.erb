<div class="row">
    <div class="col-md-12">
        <%= render 'room_menu' %>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Description
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                                       <%= form_for @room do |f| %>
                        <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Amenities</label>
                                <%= f.text_field :listing_name, placeholder: "What is your listing name?", class: "form-control", required: true %>
                            </div>

                            <div class="form-group">
                                <label>Summary</label>
                                <%= f.text_area :summary, rows: 5, placeholder: "Summary of your house", class: "form-control", required: true %>
                            </div>

                            <div class="text-center">
                                <%= f.submit "Save", class: "btn btn-primary" %>
                            </div>
                            </div>
                        </div>
                        <% end %>
                </blockquote>
            </div>
        </div>
    </div>
</div>

