<div class="row">
    <div class="col-md-12">
        <%= render 'room_menu' %>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Location
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <%= form_for @room do |f| %>
                <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Address</label>
                                <%= f.text_field :address, placeholder: "What is your address?", class: "form-control", required: true %>
                            </div>

                            <div class="text-center">
                                <%= f.submit "Save", class: "btn btn-primary" %>
                            </div>
                            </div>
                        </div>
                        <% end %>
                </blockquote>
            </div>
        </div>
    </div>
</div>