<div class="row">
    <div class="col-md-12 mt-2">
        <% flash.each do |name, msg| %>
            <div class="alert alert-info" role="alert">
                    <%= msg %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
            </div>
            <% end %>
    </div>
</div>