<div class="row">
    <div class="col-md-3">
        <%= image_tag avatar_for(current_user) %>
            <div>
                <p>Email:
                    <%= @user.email %>
                </p>
                <p>Phone Number:
                    <%= @user.phone_number %>
                </p>
            </div>
    </div>
    <div class="col-md-9">
        <h2>
            <%= @user.first_name %>
                <%= @user.second_name %>
        </h2>
        <p>
            <%= @user.description %>
        </p>
    </div>
</div>